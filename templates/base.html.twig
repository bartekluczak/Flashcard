<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
		           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link rel="stylesheet" type="text/css" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
		{% endblock %}
	</head>
	<body>
		{% block menu %}
			<div class="menu">
				<ul>
					{% for item in menu %}
						<li>
							<a
							href="{{item.url}}"
							{% if item.active == true %} style="color:red" {% endif%}>
							{{item.name}}
							</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		{% endblock %}
		{% block body %}
			{{ 'costam' }}
		{% endblock %}
		{% block javascripts %}
			<script src="{{ asset('bootstrap/js/bootstrap.bundle.min.js') }}"></script>
		{% endblock %}
	</body>
</html>
